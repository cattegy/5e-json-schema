{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "class.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    
    
   
    "traits": {
      "type": "array",
      "items": {
        "$ref": "definitions.json#/trait"
      }
    },
    "primary_ability": {
      "$ref": "definitions.json#/ability"
    },
    "hit_die": {
      "$ref": "definitions.json#/die"
    }
  },
  "required": [
    "name",
    "hit_die",
    "primary_ability"
  ],
  "verbose": {
  	"type": "object",
    "allOf": [
      {
        "$ref": "#"
      },
      {
        "properties": {
          "$schema": {
            "type": "string"
          },
          "sources": {
            "$ref": "definitions.json#/sources"
          }
        }
      }
    ]
  }
}