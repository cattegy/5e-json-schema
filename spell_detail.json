{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "spell_detail.json",
	"type": "object",
	"allOf": [
		{
			"$ref": "spell.json"
		},
		{
			"properties": {
				"description_full": {
					"type": "string",
					"description": "An extended spell description"
				},
				"sources": {
					"$ref": "definitions.json#/sources"
				}
			},
			"required": [
				"description_full"
			]
		}
	]
}